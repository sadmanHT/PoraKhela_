<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- USSD Number Button Style -->
    <style name="USSDNumberButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/ussd_number_button_bg</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- USSD Action Button Style -->
    <style name="USSDActionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/ussd_action_button_bg</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>