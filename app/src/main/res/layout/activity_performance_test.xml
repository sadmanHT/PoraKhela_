<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_dark"
    android:padding="16dp"
    tools:context=".ui.performance.testing.PerformanceTestActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_card_background"
        android:padding="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_test"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            app:tint="@color/primary_blue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Performance Test Suite"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangladesh Low-End Device Optimization"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnRetestAll"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Re-test"
            android:textSize="12sp"
            android:background="@drawable/primary_button_background"
            android:textColor="@color/white"
            android:paddingHorizontal="16dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Test Categories Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/statusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_background"
            android:padding="16dp">

            <!-- Test categories will be added dynamically here -->

        </LinearLayout>

    </ScrollView>

    <!-- Real-time Metrics -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_card_background"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current FPS"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvCurrentFPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/success_green"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"
            android:layout_marginHorizontal="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory Usage"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvCurrentMemory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- MB"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"
            android:layout_marginHorizontal="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DB Response"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvDBResponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- ms"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/warning_orange"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Test Progress -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_card_background"
        android:padding="16dp">

        <ProgressBar
            android:id="@+id/progressBarTests"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:progressTint="@color/primary_blue"
            android:progressBackgroundTint="@color/background_secondary"
            android:max="100"
            android:progress="0" />

        <TextView
            android:id="@+id/tvTestProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/12 Tests"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnGenerateReport"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Generate Report"
            android:background="@drawable/secondary_button_background"
            android:textColor="@color/primary_blue"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnOptimizeNow"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Optimize Now"
            android:background="@drawable/primary_button_background"
            android:textColor="@color/white"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>