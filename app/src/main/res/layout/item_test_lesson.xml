<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_lesson_item"
    android:padding="12dp"
    android:layout_marginVertical="4dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Completion Status Icon -->
    <ImageView
        android:id="@+id/ivCompletionStatus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/checkbox_off_background"
        android:layout_marginEnd="12dp"
        app:tint="@color/text_secondary" />

    <!-- Lesson Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title and Progress Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvLessonTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lesson Title"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvLessonProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textSize="12sp"
                android:textColor="@color/primary_blue"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvLessonSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lesson description"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginBottom="6dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:progress="75"
            android:progressTint="@color/primary_blue"
            android:progressBackgroundTint="@color/background_secondary"
            android:layout_marginBottom="4dp" />

        <!-- Difficulty Badge -->
        <TextView
            android:id="@+id/tvDifficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intermediate"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/warning_orange"
            android:background="@drawable/category_badge"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Arrow Icon -->
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_arrow_right"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        app:tint="@color/text_secondary" />

</LinearLayout>