<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    android:gravity="center"
    android:background="@color/primary_blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_title"
        android:textAppearance="@style/TextAppearance.Porakhela.Headline1"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_large" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_description"
        android:textAppearance="@style/TextAppearance.Porakhela.Body1"
        android:textColor="@color/accent_yellow"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_xxlarge" />

    <com.porakhela.core.components.PorakhelaButton
        android:id="@+id/btn_get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onboarding_get_started"
        android:backgroundTint="@color/accent_yellow"
        android:textColor="@color/black" />

</LinearLayout>