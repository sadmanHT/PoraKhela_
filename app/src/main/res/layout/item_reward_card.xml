<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/outline"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Reward Icon -->
        <ImageView
            android:id="@+id/imageRewardIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_gift"
            android:tint="@color/primary"
            tools:src="@drawable/ic_data_pack" />

        <!-- Reward Name -->
        <TextView
            android:id="@+id/textRewardName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/on_surface"
            android:textAlignment="center"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="100MB Data Pack" />

        <!-- Reward Description -->
        <TextView
            android:id="@+id/textRewardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="12sp"
            android:textColor="@color/on_surface"
            android:alpha="0.7"
            android:textAlignment="center"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Get 100MB of high-speed internet data" />

        <!-- Cost -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                android:tint="@color/accent"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/textRewardCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/accent"
                tools:text="500 Points" />

        </LinearLayout>

        <!-- Approval Required Indicator -->
        <TextView
            android:id="@+id/textApprovalRequired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Requires parent approval"
            android:textSize="10sp"
            android:textColor="@color/warning"
            android:textAlignment="center"
            android:background="@drawable/rounded_warning_background"
            android:padding="4dp"
            android:visibility="gone" />

        <!-- Redeem Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRedeem"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Redeem"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/primary"
            android:textColor="@color/on_primary"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>