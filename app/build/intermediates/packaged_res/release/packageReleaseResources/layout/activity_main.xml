<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background"
    android:padding="32dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Porakhela Streak Test"
        android:textSize="24sp"
        android:textColor="@color/on_background"
        android:fontFamily="sans-serif-medium" />
        
    <TextView
        android:id="@+id/tvStreakInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Current streak: Loading..."
        android:textSize="18sp"
        android:textColor="@color/primary" />
    
    <TextView
        android:id="@+id/tvTimeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Study time: Loading..."
        android:textSize="16sp"
        android:textColor="@color/on_background" />

    <Button
        android:id="@+id/btnCompleteLesson"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Complete Lesson"
        android:textSize="16sp"
        android:backgroundTint="@color/primary" />

    <Button
        android:id="@+id/btnStartTimer"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="Start Timer"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnPauseTimer"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="Pause Timer"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnResumeTimer"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="Resume Timer"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnRewardsCenter"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="Rewards Center"
        android:textSize="16sp"
        android:backgroundTint="@color/accent" />

    <!-- Testing Controls -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Point Testing:"
        android:textSize="14sp"
        android:textColor="@color/on_background"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnSet300Points"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:text="Set 300"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSet600Points"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:text="Set 600"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSet2000Points"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Set 2000"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>