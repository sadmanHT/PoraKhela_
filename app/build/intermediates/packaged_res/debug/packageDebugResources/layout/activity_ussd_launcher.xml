<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USSD Interface"
            android:textSize="28sp"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*123# Telecom Menu Simulation"
            android:textSize="16sp"
            android:textColor="@color/on_background"
            android:layout_marginBottom="32dp" />

        <!-- Phone Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_phone"
            android:layout_marginBottom="24dp"
            android:contentDescription="Phone icon" />

        <!-- Feature Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is USSD Interface?"
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USSD (Unstructured Supplementary Service Data) is a protocol used by GSM cellular telephones to communicate with service provider computers. This interface simulates the traditional *123# menu system that parents can access on basic mobile phones without internet connectivity."
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginBottom="24dp" />

        <!-- Features Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available Features:"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Check your child's Porapoints balance\n• Approve or deny reward redemption requests\n• View learning progress summary\n• Change your parent PIN for security"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginBottom="24dp" />

        <!-- Benefits Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Why USSD?"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Works on any mobile phone, including basic feature phones\n• No internet connection required\n• Familiar interface that parents already know\n• Secure PIN-based access\n• Real-time access to your child's learning data"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginBottom="32dp" />

        <!-- Security Notice -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Notice:"
            android:textSize="18sp"
            android:textColor="@color/primary"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This interface requires a 4-digit parent PIN for access. Make sure to set a secure PIN that only you know. You can change your PIN anytime through the interface."
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginBottom="32dp" />

        <!-- Launch Button -->
        <Button
            android:id="@+id/btnLaunchUSSD"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Launch USSD Interface"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>