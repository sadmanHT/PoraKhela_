<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- USSD Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="USSD"
            android:textColor="#00FF00"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ussd_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Connected"
            android:textColor="#00FF00"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- USSD Display Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"
        android:padding="8dp">

        <TextView
            android:id="@+id/ussd_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:lineSpacingExtra="2dp"
            android:text="*123# - Porakhela Menu\n\nLoading..."
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </ScrollView>

    <!-- Input Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#222222"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Input Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="Input: "
                android:textColor="#00FF00"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ussd_input_field"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="monospace"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Number Pad -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="8dp">

            <!-- Row 1 -->
            <Button
                android:id="@+id/btn1"
                style="@style/USSDNumberButton"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                style="@style/USSDNumberButton"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                style="@style/USSDNumberButton"
                android:text="3" />

            <!-- Row 2 -->
            <Button
                android:id="@+id/btn4"
                style="@style/USSDNumberButton"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                style="@style/USSDNumberButton"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                style="@style/USSDNumberButton"
                android:text="6" />

            <!-- Row 3 -->
            <Button
                android:id="@+id/btn7"
                style="@style/USSDNumberButton"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                style="@style/USSDNumberButton"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                style="@style/USSDNumberButton"
                android:text="9" />

            <!-- Row 4 -->
            <Button
                android:id="@+id/btnClear"
                style="@style/USSDActionButton"
                android:text="CLR" />

            <Button
                android:id="@+id/btn0"
                style="@style/USSDNumberButton"
                android:text="0" />

            <Button
                android:id="@+id/btnSend"
                style="@style/USSDActionButton"
                android:text="SEND" />

        </GridLayout>

    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:fontFamily="monospace"
        android:gravity="center"
        android:padding="4dp"
        android:text="USSD Simulation - Porakhela"
        android:textColor="#888888"
        android:textSize="10sp" />

</LinearLayout>