<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Correct Answer State -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/success_color" />
            <corners android:radius="@dimen/corner_radius_medium" />
            <stroke android:width="3dp" android:color="@color/success_dark" />
        </shape>
    </item>
    
    <!-- Wrong Answer State -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/error_color" />
            <corners android:radius="@dimen/corner_radius_medium" />
            <stroke android:width="3dp" android:color="@color/error_dark" />
        </shape>
    </item>
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_light" />
            <corners android:radius="@dimen/corner_radius_medium" />
            <stroke android:width="2dp" android:color="@color/primary_color" />
        </shape>
    </item>
    
    <!-- Disabled State -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_disabled" />
            <corners android:radius="@dimen/corner_radius_medium" />
            <stroke android:width="1dp" android:color="@color/border_color" />
        </shape>
    </item>
    
    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/corner_radius_medium" />
            <stroke android:width="2dp" android:color="@color/border_color" />
        </shape>
    </item>
    
</selector>