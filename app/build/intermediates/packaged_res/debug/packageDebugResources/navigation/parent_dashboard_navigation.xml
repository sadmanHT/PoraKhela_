<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_dashboard_navigation"
    app:startDestination="@id/parentPinAuthFragment">

    <fragment
        android:id="@+id/parentPinAuthFragment"
        android:name="com.porakhela.ui.parent.ParentPinAuthFragment"
        android:label="Parent Authentication">
        <action
            android:id="@+id/action_parentPinAuth_to_parentDashboard"
            app:destination="@id/parentDashboardFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left" />
    </fragment>

    <fragment
        android:id="@+id/parentDashboardFragment"
        android:name="com.porakhela.ui.parent.ParentDashboardFragment"
        android:label="Parent Dashboard" />

</navigation>