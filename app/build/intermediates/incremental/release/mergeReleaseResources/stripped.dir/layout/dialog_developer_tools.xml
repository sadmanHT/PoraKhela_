<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ› ï¸ Developer Tools - Applink API Testing"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_large" />

        <!-- Current Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Current Status"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_small" />

                <TextView
                    android:id="@+id/tv_current_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Points: Loading..."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_api_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="API Status: Normal Mode"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_last_operation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last: None"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="monospace"
                    android:layout_marginTop="@dimen/margin_small" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- API Testing Buttons -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§ª API Testing"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_small" />

                <Button
                    android:id="@+id/btn_mock_subscribe"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_medium"
                    android:text="ðŸ“± Mock Subscribe (CAAS)"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_mock_sms"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_medium"
                    android:text="ðŸ’¬ Mock Send Learning Report SMS"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:backgroundTint="@color/accent_color"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn_mock_redeem"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_medium"
                    android:text="ðŸŽ Mock Redeem 100 Porapoints"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:backgroundTint="@color/success_color"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btn_mock_otp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height_medium"
                    android:text="ðŸ” Mock OTP Verify"
                    android:backgroundTint="@color/timer_color"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Error Simulation Controls -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Error Simulation"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Simulate Error Response"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <Switch
                        android:id="@+id/switch_error_simulation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Error Code:"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <Spinner
                        android:id="@+id/spinner_error_code"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:enabled="false" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/margin_small">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Simulate Timeout"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <Switch
                        android:id="@+id/switch_timeout_simulation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Response Delay"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_tiny" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <SeekBar
                        android:id="@+id/seekbar_delay"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:progress="0"
                        android:max="5000" />

                    <TextView
                        android:id="@+id/tv_delay_value"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="0ms"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="end" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Testing Utilities -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            app:cardCornerRadius="@dimen/corner_radius_medium"
            app:cardElevation="@dimen/elevation_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”§ Testing Utilities"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/margin_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_reset_points"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_small"
                        android:layout_weight="1"
                        android:text="Reset Points"
                        android:layout_marginEnd="@dimen/margin_small"
                        android:backgroundTint="@color/error_color"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btn_add_test_points"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/button_height_small"
                        android:layout_weight="1"
                        android:text="Add 500 Points"
                        android:backgroundTint="@color/success_color"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Close Button -->
        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_medium"
            android:text="âœ–ï¸ Close Developer Tools"
            android:backgroundTint="@color/gray_medium"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_medium" />

    </LinearLayout>

</ScrollView>