<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:padding="@dimen/margin_medium">

    <!-- Progress Header -->
    <LinearLayout
        android:id="@+id/progress_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:layout_marginEnd="@dimen/margin_medium" />

        <!-- Progress Text -->
        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Question 1 of 6"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Timer Text -->
        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:30"
            android:textColor="@color/accent_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_medium" />

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:progressTint="@color/accent_color"
        android:progressBackgroundTint="@color/background_secondary"
        android:max="100"
        android:progress="17"
        app:layout_constraintTop_toBottomOf="@id/progress_header" />

    <!-- Timer Progress Bar -->
    <ProgressBar
        android:id="@+id/timer_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/margin_small"
        android:progressTint="@color/timer_color"
        android:progressBackgroundTint="@color/background_secondary"
        android:max="100"
        android:progress="100"
        app:layout_constraintTop_toBottomOf="@id/progress_bar" />

    <!-- Question Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/question_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_medium"
        app:cardCornerRadius="@dimen/corner_radius_large"
        app:cardElevation="@dimen/elevation_medium"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/timer_progress"
        app:layout_constraintBottom_toTopOf="@id/options_container"
        app:layout_constraintHeight_percent="0.35">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/margin_large">

            <!-- Question Number Badge -->
            <TextView
                android:id="@+id/tv_question_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q1"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:layout_marginBottom="@dimen/margin_medium" />

            <!-- Question Text -->
            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is 2 + 2?"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                tools:text="What is the correct answer to this mathematical question that we are asking?" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Options Container -->
    <LinearLayout
        android:id="@+id/options_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_medium"
        app:layout_constraintBottom_toTopOf="@id/lesson_controls"
        app:layout_constraintHeight_percent="0.4">

        <!-- Option A -->
        <Button
            android:id="@+id/btn_option_a"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="A. Option A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:background="@drawable/lesson_option_button"
            android:gravity="start|center_vertical"
            android:paddingHorizontal="@dimen/margin_large"
            android:minHeight="60dp"
            tools:text="A. This is a sample answer option A" />

        <!-- Option B -->
        <Button
            android:id="@+id/btn_option_b"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="B. Option B"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:background="@drawable/lesson_option_button"
            android:gravity="start|center_vertical"
            android:paddingHorizontal="@dimen/margin_large"
            android:minHeight="60dp"
            tools:text="B. This is a sample answer option B" />

        <!-- Option C -->
        <Button
            android:id="@+id/btn_option_c"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="C. Option C"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:background="@drawable/lesson_option_button"
            android:gravity="start|center_vertical"
            android:paddingHorizontal="@dimen/margin_large"
            android:minHeight="60dp"
            tools:text="C. This is a sample answer option C" />

        <!-- Option D -->
        <Button
            android:id="@+id/btn_option_d"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="D. Option D"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:background="@drawable/lesson_option_button"
            android:gravity="start|center_vertical"
            android:paddingHorizontal="@dimen/margin_large"
            android:minHeight="60dp"
            tools:text="D. This is a sample answer option D" />

    </LinearLayout>

    <!-- Lesson Controls -->
    <LinearLayout
        android:id="@+id/lesson_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Skip Button -->
        <Button
            android:id="@+id/btn_skip"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skip Question"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:enabled="false" />

        <!-- Next Button -->
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next Question"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_background"
            android:textColor="@color/white"
            android:minHeight="48dp"
            android:enabled="false"
            android:layout_marginStart="@dimen/margin_medium" />

    </LinearLayout>

    <!-- Loading Overlay -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_background"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/accent_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading lesson..."
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/margin_medium" />

        </LinearLayout>

    </FrameLayout>

    <!-- Confetti Container -->
    <FrameLayout
        android:id="@+id/confetti_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>