<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/margin_large"
    android:background="@drawable/gamification_background">

    <!-- Game Controller Icon -->
    <ImageView
        android:id="@+id/imgGameIcon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/game_controller"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:contentDescription="Gaming icon"
        android:scaleType="centerInside" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn Through Play"
        android:textAppearance="@style/TextAppearance.Porakhela.Headline1"
        android:textColor="@color/primary_blue"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_medium" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mini-Games + School Lessons"
        android:textAppearance="@style/TextAppearance.Porakhela.Headline2"
        android:textColor="@color/success_green"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_large" />

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play interactive mini-games to master English vocabulary, grammar, and pronunciation. Every lesson feels like playtime!"
        android:textAppearance="@style/TextAppearance.Porakhela.Body1"
        android:textColor="@color/gray_dark"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />

</LinearLayout>