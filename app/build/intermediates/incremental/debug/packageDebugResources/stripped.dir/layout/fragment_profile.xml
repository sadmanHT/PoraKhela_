<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile_title"
        android:textAppearance="@style/TextAppearance.Porakhela.Headline1"
        android:layout_marginBottom="@dimen/margin_xlarge" />

    <com.porakhela.core.components.PorakhelaButton
        android:id="@+id/btn_settings"
        style="@style/Widget.Porakhela.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_settings"
        android:layout_marginBottom="@dimen/margin_medium" />

    <com.porakhela.core.components.PorakhelaButton
        android:id="@+id/btn_parent_zone"
        style="@style/Widget.Porakhela.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_parent_zone"
        android:layout_marginBottom="@dimen/margin_medium" />

    <com.porakhela.core.components.PorakhelaButton
        android:id="@+id/btn_ussd_simulation"
        style="@style/Widget.Porakhela.Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*123# USSD Menu"
        android:textAllCaps="false"
        android:fontFamily="monospace"
        android:layout_marginBottom="@dimen/margin_medium" />

    <com.porakhela.core.components.PorakhelaButton
        android:id="@+id/btn_help"
        style="@style/Widget.Porakhela.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_help"
        android:layout_marginBottom="@dimen/margin_medium" />

</LinearLayout>