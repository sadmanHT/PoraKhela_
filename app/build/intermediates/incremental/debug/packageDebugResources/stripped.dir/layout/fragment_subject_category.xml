<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface"
    android:padding="@dimen/margin_medium">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_header_background"
        android:padding="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large">

        <!-- Subject Title -->
        <TextView
            android:id="@+id/tv_subject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“š Subject Name"
            android:textAppearance="@style/TextAppearance.Porakhela.Headline1"
            android:textColor="@color/primary"
            android:textSize="28sp"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- Subject Description -->
        <TextView
            android:id="@+id/tv_subject_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subject description goes here"
            android:textAppearance="@style/TextAppearance.Porakhela.Body1"
            android:textColor="@color/on_surface"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- Categories Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Topic"
        android:textAppearance="@style/TextAppearance.Porakhela.Headline2"
        android:textColor="@color/on_surface"
        android:textSize="22sp"
        android:layout_marginBottom="@dimen/margin_medium" />

    <!-- Categories RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_categories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/margin_medium" />

</LinearLayout>