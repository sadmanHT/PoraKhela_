<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/primary_blue">

    <!-- Logo Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_xxlarge">

        <!-- Placeholder Logo -->
        <View
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/splash_background"
            android:layout_marginBottom="@dimen/margin_large" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.Porakhela.Headline1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xxlarge"
            android:layout_marginBottom="@dimen/margin_small" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/splash_subtitle"
            android:textAppearance="@style/TextAppearance.Porakhela.Body1"
            android:textColor="@color/accent_yellow"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:indeterminateTint="@color/accent_yellow"
        android:layout_marginTop="@dimen/margin_large" />

</LinearLayout>