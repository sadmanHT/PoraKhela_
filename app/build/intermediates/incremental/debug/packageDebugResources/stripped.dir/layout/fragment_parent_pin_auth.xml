<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/margin_large">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_extra_large">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_security"
            android:layout_marginBottom="@dimen/margin_medium"
            app:tint="@color/primary_color" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parent Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="@dimen/margin_small" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your 4-digit PIN"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

    </LinearLayout>

    <!-- PIN Input Container -->
    <LinearLayout
        android:id="@+id/pin_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_large">

        <!-- PIN Dots Display -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_large">

            <View
                android:id="@+id/pin_dot_1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/pin_dot_2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/pin_dot_3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/pin_dot_empty" />

            <View
                android:id="@+id/pin_dot_4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/pin_dot_empty" />

        </LinearLayout>

        <!-- Hidden PIN Input -->
        <EditText
            android:id="@+id/et_pin_hidden"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:visibility="invisible" />

    </LinearLayout>

    <!-- Error Message -->
    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Error message"
        android:textSize="14sp"
        android:textColor="@color/error_color"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_medium"
        android:visibility="gone" />

    <!-- Cooldown Timer -->
    <TextView
        android:id="@+id/tv_cooldown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Try again in 30 seconds"
        android:textSize="16sp"
        android:textColor="@color/timer_color"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_medium"
        android:visibility="gone" />

    <!-- Number Pad -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_large">

        <!-- Row 1: 1, 2, 3 -->
        <Button
            android:id="@+id/btn_1"
            style="@style/PinButtonStyle"
            android:text="1" />

        <Button
            android:id="@+id/btn_2"
            style="@style/PinButtonStyle"
            android:text="2" />

        <Button
            android:id="@+id/btn_3"
            style="@style/PinButtonStyle"
            android:text="3" />

        <!-- Row 2: 4, 5, 6 -->
        <Button
            android:id="@+id/btn_4"
            style="@style/PinButtonStyle"
            android:text="4" />

        <Button
            android:id="@+id/btn_5"
            style="@style/PinButtonStyle"
            android:text="5" />

        <Button
            android:id="@+id/btn_6"
            style="@style/PinButtonStyle"
            android:text="6" />

        <!-- Row 3: 7, 8, 9 -->
        <Button
            android:id="@+id/btn_7"
            style="@style/PinButtonStyle"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/PinButtonStyle"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/PinButtonStyle"
            android:text="9" />

        <!-- Row 4: Clear, 0, Backspace -->
        <Button
            android:id="@+id/btn_clear"
            style="@style/PinButtonStyle"
            android:text="C"
            android:textColor="@color/error_color" />

        <Button
            android:id="@+id/btn_0"
            style="@style/PinButtonStyle"
            android:text="0" />

        <Button
            android:id="@+id/btn_backspace"
            style="@style/PinButtonStyle"
            android:text="âŒ«"
            android:textColor="@color/text_secondary" />

    </GridLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height_medium"
        android:text="Back to Profile"
        android:backgroundTint="@color/gray_medium"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_medium" />

</LinearLayout>