<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rewards_title"
        android:textAppearance="@style/TextAppearance.Porakhela.Headline1"
        android:layout_marginBottom="@dimen/margin_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rewards_subtitle"
        android:textAppearance="@style/TextAppearance.Porakhela.Body1"
        android:textColor="@color/gray_dark"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_xlarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rewards_total_points"
        android:textAppearance="@style/TextAppearance.Porakhela.Headline2"
        android:layout_marginBottom="@dimen/margin_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,250"
        android:textAppearance="@style/TextAppearance.Porakhela.Headline1"
        android:textColor="@color/primary_blue"
        android:layout_marginBottom="@dimen/margin_xlarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rewards system coming soon!"
        android:textAppearance="@style/TextAppearance.Porakhela.Body2"
        android:textStyle="italic" />

</LinearLayout>