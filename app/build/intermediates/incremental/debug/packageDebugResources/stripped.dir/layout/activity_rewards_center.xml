<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ui.rewards.RewardsCenterActivity">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rewards Center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/on_primary"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Redeem your Porapoints for amazing rewards!"
            android:textSize="14sp"
            android:textColor="@color/on_primary"
            android:alpha="0.9"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <!-- Balance Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/surface"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:elevation="2dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_star"
            android:tint="@color/accent"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your Balance:"
            android:textSize="16sp"
            android:textColor="@color/on_surface" />

        <TextView
            android:id="@+id/textUserBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,250 Points"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/accent" />

    </LinearLayout>

    <!-- Rewards List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRewards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_reward_card"
        tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        tools:spanCount="2" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_gift"
            android:alpha="0.3"
            android:tint="@color/on_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="No rewards available"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/on_background"
            android:alpha="0.7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Complete more lessons to unlock amazing rewards!"
            android:textSize="14sp"
            android:textColor="@color/on_background"
            android:alpha="0.5"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>